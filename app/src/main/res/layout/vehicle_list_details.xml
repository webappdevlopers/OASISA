<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/thirdlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Vehical No. : "/>

                <TextView
                    android:id="@+id/vehical_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/calibri"
                    android:textColor="#61606E"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Licence No. :"/>
                <TextView
                    android:id="@+id/licence_no"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#61606E"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Source :"/>
                <TextView
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#61606E"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Destination :"/>
                <TextView
                    android:id="@+id/destination"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#61606E"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Cost Per Kg :"/>
                <TextView
                    android:id="@+id/costpkg"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#61606E"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Min. Order in Kg :"/>
                <TextView
                    android:id="@+id/minodrpkg"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#61606E"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#656571"
                    android:text="Max. Order in Kg :"/>
                <TextView
                    android:id="@+id/maxodrpkg"
                    android:layout_width="match_parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/calibri"
                    android:layout_height="wrap_content"
                    android:textColor="#61606E"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="14dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delivery_truck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/update"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:padding="7dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_pen" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_marginTop="5dp"
        android:layout_below="@id/thirdlayout"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#E5E5E5"/>
</RelativeLayout>
